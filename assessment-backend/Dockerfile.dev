FROM eclipse-temurin:21-jdk-alpine

WORKDIR /app

# Install curl for healthchecks and bash for mvnw
RUN apk add --no-cache curl bash

# Copy Maven wrapper and configuration first (for better caching)
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

# Make mvnw executable and download dependencies (cache layer)
RUN chmod +x mvnw && ./mvnw dependency:go-offline -B

# Copy source code
COPY src ./src

# Expose ports
EXPOSE 8080 5005 35729

# Development command with Spring Boot DevTools
CMD ["./mvnw", "spring-boot:run", "-Dspring-boot.run.jvmArguments=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"]